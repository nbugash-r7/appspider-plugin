<%
f = taglib("/lib/form")
f.block do
  f.entry(:title => 'AppSpider Restful API URL',
          :field => 'rest_api_url',
          :description => 'Enter the AppSpider rest api url (E.g http://appspiderside/rest/v1)') do
    f.textbox
  end
  f.entry(:title => 'Username',
          :field => 'username',
          :description => 'Enter your username  (E.g guest)') do
    f.textbox
  end
  f.entry(:title => 'Password',
          :field => 'password',
          :description => 'Enter your password') do
    f.password
  end
  f.entry(:title => 'Scan config name',
          :field => 'config_name',
          :description => 'Enter the scan config name (E.g: testsite)') do
    f.textbox
  end
  f.entry(:title => 'Start scan?',
          :field => 'startscan',
          :default => true,
          :description => 'Start the AppSpider Scan after Build Completion') do
    f.checkbox
  end
  f.entry(:title => 'Monitor scan?',
          :field => 'monitor',
          :default => true,
          :description => 'Note: When enabled this will block the entire build process until the scan is completed') do
    f.checkbox
  end
end
%>
